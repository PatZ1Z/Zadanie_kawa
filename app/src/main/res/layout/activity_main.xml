<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#CDDEB79F">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#562D07"
        android:text="Kreator zamówienia kawy"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:textColor="#562D07"
        android:text="Wybierz kawę:"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RadioGroup"
            >
            <RadioButton
                android:id="@+id/latte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latte"

                />
            <RadioButton
                android:id="@+id/espresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espresso"
                />
            <RadioButton
                android:id="@+id/cappuccino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cappuccino"
                />


        </RadioGroup>

        <ImageView
            android:id="@+id/kawaImage"
            android:layout_width="250dp"
            android:layout_height="142dp"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:scaleType="fitCenter"
            android:contentDescription="kawa"

            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#854A0C"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:textColor="#562D07"
        android:text="Dodatki:"
        android:layout_gravity="center"
        />

    <CheckBox
        android:id="@+id/mleko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mleko" />
    <CheckBox
        android:id="@+id/cukier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cukier" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#854A0C"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:textColor="#562D07"
        android:text="Ilość kaw:"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/ilosc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="1"
        />

    <SeekBar
        android:id="@+id/ilosc_SeekBar"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:max="20"
        android:min="1"
        android:progress="1"
        android:progressBackgroundTint="#FF9801"
        android:progressTint="#854A0C"
        android:thumbTint="@android:color/black" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zamów"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#904C06"
        />

</LinearLayout>